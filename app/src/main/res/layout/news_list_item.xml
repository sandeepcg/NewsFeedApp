<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_list_height">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/news_list_card_elevation"
        app:cardCornerRadius="@dimen/news_list_cardview_radius"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="@dimen/news_list_card_elevation"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/newsimage"
        android:layout_width="@dimen/news_list_imageview_width"
        android:layout_height="@dimen/news_list_imageview_height"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/newsimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newsauthor"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newsimage"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/newspublisheddate"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="@dimen/text_size_10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newsimage"
        app:layout_constraintTop_toBottomOf="@+id/newsauthor" />

        <TextView
            android:id="@+id/source"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:layout_marginTop="60dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/newsimage"
            app:layout_constraintTop_toBottomOf="@+id/newspublisheddate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>